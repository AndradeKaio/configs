#change default shell to fish
apt install nvim

apt install tmux

#install alacritty
add-apt-repository ppa:mmstick76/alacritty
apt install alacritty

curl -L https://get.oh-my.fish | fish
omf install eclm
chsh -s `which fish`

cp -R alacritty ~/.config/ && cp -R nvim/ ~/.config/ && cp -R fish/ ~/.config
cp .tmux.conf ~/

sudo apt install htop
